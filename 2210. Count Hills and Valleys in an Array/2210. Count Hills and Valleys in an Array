class Solution {
    public int countHillValley(int[] nums) {
       
    int count = 0;
    int prevDistinct = nums[0];

    for (int i = 1; i < nums.length - 1; i++) {
        if (nums[i] == nums[i + 1]) continue;

        if (nums[i] > prevDistinct && nums[i] > nums[i + 1]) {
            count++;
        } else if (nums[i] < prevDistinct && nums[i] < nums[i + 1]) {
            count++;
        }

        prevDistinct = nums[i];
    }

    return count;
} 
        
    }
