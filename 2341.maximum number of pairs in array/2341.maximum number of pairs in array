class Solution {
    public int[] numberOfPairs(int[] nums) {
        Map<Integer, Integer>  fmap = new HashMap<>();
        for  ( int i =0; i< nums.length;i++){
            fmap.put (nums[i],fmap.getOrDefault(nums[i],0) +1);
            
        }
        int pairs =0;
        int leftover = 0;
        for (int count : fmap.values()){
            pairs += count/2;
            leftover += count % 2;
        }
        return new int [] {pairs, leftover};
    }
}
