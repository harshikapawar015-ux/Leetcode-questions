class Solution {
    public boolean checkDistances(String s, int[] distance) {
        
    
        int[] first = new int[26];
        for (int i = 0; i < 26; i++) {
            first[i] = -1;
        }

        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            int idx = c - 'a'; 

            if (first[idx] == -1) {
                
                first[idx] = i;
            } else {
                
                if (i - first[idx] - 1 != distance[idx]) {
                    return false;
                }
            }
        }

        return true;
    }
}

        
    
